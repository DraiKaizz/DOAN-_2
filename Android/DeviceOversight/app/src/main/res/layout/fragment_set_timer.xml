<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bright_blue">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/ic_alarm"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Device Timer 1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/view_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device State 1: Loading..."
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hour: ... Minute: ..."
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:gravity="center"/>


    <Button
        android:id="@+id/btn_timer"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="SELECT TIME"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"/>

    <ToggleButton
        android:id="@+id/btn_cancel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/bt_toggle"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/wait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device State 1: Loading..."
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/bright_blue"
        android:layout_marginTop="30dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/ic_alarm"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Device Timer 2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/view_timer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device State 2: Loading..."
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hour: ... Minute: ..."
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_timer1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="SELECT TIME"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"/>

    <ToggleButton
        android:id="@+id/btn_cancel1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/bt_toggle"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/wait1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device State 2: Loading..."
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

</LinearLayout>
